{{>layouts/header}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>프로필 수정</title>
    <link rel="stylesheet" type="text/css" href="/css/profileUpdate.css">
</head>
<body>
<main class="profileUpdate-container">
{{#updateMember}}
    <form action="/profile/update" method="post">
        <a href="/main"><img id="homelogo" src="/images/homelogo.jpg" alt="홈 로고"></a>

        <h1 class="h3 mb-3 fw-normal" style="font-weight: bold;">정보 수정</h1>

        <div class="form-group">
            <input type="text" class="form-control" name="userEmail" value="{{userEmail}}" placeholder="이메일" required>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="userPassword" value="{{userPassword}}" placeholder="비밀번호" required>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="userName" value="{{userName}}" placeholder="이름" required>
        </div>

        <button class="write-button" type="submit">정보수정</button>
    </form>
{{/updateMember}}
</main>

</body>
</html>
{{>layouts/footer}}