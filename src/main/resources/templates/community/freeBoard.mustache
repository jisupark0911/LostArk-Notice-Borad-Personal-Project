{{>layouts/header}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>자유게시판</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>




<div class="container mt-4">
    <h1>자유게시판</h1>


    <div class="mb-4">
        <form action="/community/freeBoard/search" method="get" class="d-flex">
            <input type="text" name="keyword" class="form-control me-2" placeholder="검색어를 입력해주세요" required>
            <button type="submit" class="btn btn-primary">검색</button>
        </form>
    </div>
    <!-- 검색 결과가 있을 때 -->
    {{#freeBoardResults}}
        <div class="mb-4">
            <h2>검색 결과</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">닉네임</th>
                    <th scope="col">제목</th>
                    <th scope="col">내용</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{id}}</td>
                        <td>{{username}}</td>
                        <td><a href="/community/freeBoard/{{id}}">{{title}}</a></td>
                        <td>{{content}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    {{/freeBoardResults}}

    <!-- 검색 결과가 없을 때 -->
    {{^freeBoardResults}}
        <div class="mb-4">
            <h2>게시판 목록</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">닉네임</th>
                    <th scope="col">제목</th>
                    <th scope="col">내용</th>
                </tr>
                </thead>
                <tbody>
                {{#freeBoardList}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{username}}</td>
                        <td><a href="/community/freeBoard/{{id}}">{{title}}</a></td>
                        <td>{{content}}</td>
                    </tr>
                {{/freeBoardList}}
                </tbody>
            </table>
        </div>
    {{/freeBoardResults}}




    <div class="mb-4">
        <a href="/community/freeBoard/new" class="btn btn-primary">글 작성</a>
    </div>
</div>


{{>layouts/footer}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-oBqDVmMz4fnFO9xII3SwmN9ALqAR0cP9+zQ4pE3x5m5s10sHf5xnkJdC5yHqZ9xQ" crossorigin="anonymous"></script>
</body>
</html>
